<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/fab_margin">

    <TableRow
        android:layout_marginTop="5pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_gravity="left"
                android:textSize="8pt"
                android:maxWidth="100pt"
                android:layout_width="wrap_content"
                android:text="Длина (7 символов)"
                />

            <SeekBar
                android:layout_marginTop="1pt"
                android:progress="20"
                android:minWidth="80pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/passLen" />
        </GridLayout>


    </TableRow>

    <TableRow
        android:layout_marginTop="5pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Цифры"
                android:id="@+id/checkBox" />

            <CheckBox
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Прописные"
                android:id="@+id/checkBox2" />

            <CheckBox
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Строчные"
                android:id="@+id/checkBox3" />
        </GridLayout>
    </TableRow>

    <TableRow
        android:layout_marginTop="5pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Спец. символы"
                android:id="@+id/checkBox4" />

            <CheckBox
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Данные опроса"
                android:id="@+id/checkBox6" />
        </GridLayout>
    </TableRow>

    <TableRow
        android:layout_marginTop="15pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorMetal"
            android:layout_marginBottom="10pt"
            android:text="Сгенерировать"
            android:onClick="generatePassword"
            android:id="@+id/generatePassButton" />

    </TableRow>

    <TableRow
        android:layout_marginTop="10pt"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:focusable="false"
            android:textAlignment="center"
            android:textSize="13pt"
            android:singleLine="true"
            android:lines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/passwordField" />
    </TableRow>


</LinearLayout>